<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:paddingLeft="30dp"
              android:paddingRight="30dp"
              android:paddingTop="30dp"
              android:layout_height="match_parent" android:weightSum="1">


    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="School Profile"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            android:background="@drawable/btn_bg"
            android:id="@+id/button" android:layout_gravity="center_horizontal" android:layout_weight="0.06"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/btn_bg"
            android:text="Vision, Mission, and Goals"
            android:layout_marginBottom="5dp"
            android:id="@+id/button2" android:layout_gravity="center_horizontal" android:layout_weight="0.06"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/btn_bg"
            android:text="Core Values"
            android:layout_marginBottom="5dp"
            android:id="@+id/button3" android:layout_gravity="center_horizontal" android:layout_weight="0.06"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/btn_bg"
            android:text="Board of Trustees"
            android:layout_marginBottom="5dp"
            android:id="@+id/button4" android:layout_gravity="center_horizontal" android:layout_weight="0.06"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/btn_bg"
            android:text="Admin Officials"
            android:layout_marginBottom="5dp"
            android:id="@+id/button5" android:layout_gravity="center_horizontal" android:layout_weight="0.06"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/btn_bg"
            android:text="Deans and Program Heads"
            android:layout_marginBottom="5dp"
            android:id="@+id/button6" android:layout_gravity="center_horizontal" android:layout_weight="0.06"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/btn_bg"
            android:text="Faculty Members"
            android:layout_marginBottom="5dp"
            android:id="@+id/button7" android:layout_gravity="center_horizontal" android:layout_weight="0.06"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/btn_bg"
            android:text="Departmental Objectives"
            android:id="@+id/button8" android:layout_gravity="center_horizontal" android:layout_weight="0.06"/>
</LinearLayout>